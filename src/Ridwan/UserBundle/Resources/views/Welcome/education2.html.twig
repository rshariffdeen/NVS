{% extends 'RidwanUserBundle:Welcome:index2.html.twig' %}

{% block content %}
<div id="content" class="span10">

    <div class="row-fluid">
    <br><br>
    <div>
            <h1 style="color: white">Educational Qualifications</h1>
    </div>
    <br><br>
    <div class="pull-right">
        <a><button class="btn-new btn btn-round btn-success"><i class="icon-plus"></i> Add Qualification </button></a>
        <a><button class="btn-continue btn btn-round btn-warning"> Continue <i class="icon-arrow-right"></i> </button></a>
    </div>
    <div class="box span12">

    <div class="box-content">


    <table class="table table-striped table-bordered bootstrap-datatable " width="100%">
        <thead >
        <tr>
            <th width="30%">Institution</th>
            <th width="10%">Degree</th>
            <th width="30%">Field</th>
            <th width="10%">Duration</th>
            <th width="20%">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in qualifications %}
            <tr>
                <td width="30%">{{ entity.institution }}</td>
                <td width="30%">{{ entity.degree }}</td>
                <td width="10%">{{ entity.field }}</td>
                <td width="10%">{{ entity.duration }}</td>
                <td width="20%">
                    <ul>
                        <li>
                            <a href="{{ path('ridwan_education_delete', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('ridwan_education_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
        </div>
    </div>
    </div>

</div>
    </div>

    <div class="modal hide fade" id="new">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">×</button>
            <h3>Add qualification</h3>
        </div>
        <div class="modal-body">
            <p >Please fill the following details
            </p>

            {{ form_start(form) }}

            <div class="control-group primary">
                {{form_label(form.institution, 'Institution Name',{ 'label_attr': {'class': 'control-label'} })}}

                <div class="controls">
                    {{form_widget(form.institution,{'attr':{'placeholder':'University of Moratuwa'}})}}
                    <span class="help-inline">{{ form_errors(form.institution) }}</span>
                </div>
            </div>
            <div class="control-group primary">
                {{form_label(form.degree, 'Level of Study',{ 'label_attr': {'class': 'control-label'} })}}

                <div class="controls">
                    {{form_widget(form.degree,{'attr':{'placeholder':'University of Moratuwa'}})}}
                    <span class="help-inline">{{ form_errors(form.degree) }}</span>
                </div>
            </div>
            <div class="control-group primary">
                {{form_label(form.field, 'Field',{ 'label_attr': {'class': 'control-label'} })}}

                <div class="controls">
                    {{form_widget(form.field,{'attr':{'placeholder':'Engineering / Mathematics'}})}}
                    <span class="help-inline">{{ form_errors(form.field) }}</span>
                </div>
            </div>
            <div class="control-group primary">
                {{form_label(form.duration, 'Duration',{ 'label_attr': {'class': 'control-label'} })}}

                <div class="controls">
                    {{form_widget(form.duration,{'attr':{'placeholder':'2010-2014'}})}}
                    <span class="help-inline">{{ form_errors(form.duration) }}</span>
                </div>
            </div>





        </div>
        <div class="modal-footer">
                <input name="id" id="del-id" type="hidden" value="empty" />
                <a href="#" class="btn" data-dismiss="modal">Close</a>
                <input type="submit" class="btn btn-primary" value="continue">
            {{ form_end(form) }}

        </div>
    </div>

    <div class="modal hide fade" id="continue">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">×</button>
            <h3>Are you sure?</h3>
        </div>
        <div class="modal-body">
            {% if qualifications == null %}
            <p align="center">You have not added any information regarding your educational background<br>Are you sure you want to skip?
            </p>

            {% else %}
                <p align="center">Have you completed your educational qualifications?
                </p>
            {% endif %}

        </div>
        <div class="modal-footer">
            <input name="id" id="del-id" type="hidden" value="empty" />
            <a href="#" class="btn" data-dismiss="modal">Close</a>
            <a href="{{ path('ridwan_user_volunteer_employment') }}"> <input class="btn btn-primary" value="continue"></a>

        </div>
    </div>
{% endblock %}

