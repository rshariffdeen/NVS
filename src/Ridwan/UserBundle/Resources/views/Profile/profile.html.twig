{% extends "MoraspiritStyleBundle:basic:basic.html.twig" %}


{% block content %}
<div class="container-fluid">
    <div class="row-fluid">

        <noscript>
        <div class="alert alert-block span12">
            <h4 class="alert-heading">Warning!</h4>
            <p>You need to have <a href="http://en.wikipedia.org/wiki/JavaScript" target="_blank">JavaScript</a> enabled to use this site.</p>
        </div>
        </noscript>
         <div id="content" class="span10 ">
			<!-- content starts -->
			
                        <div class="row-fluid">
      
<div class="box span4">                                
        
        <div class="box-content ">
             
           <p align="center">
                        {% if user.path != null %}
                        <img src="{{user.path}}" width="300px" height="300px" style="border: 2px">
                        {% else %}
                        <img src="/web/bundles/User/Photo/default.jpg" width="300px" height="300px" style="border: 2px">
                        {% endif%}
           </p>
        </div>
    </div>
                           
   
<div class="box span8">                                
        
        <div class="box-content ">
            <div id="content" class="span12">
               
                {% if (app.session.get('user')) == user.id%}
                    <div class="pull-right"> 
                        <a href="{{path('moraspirit_profile_edit')}} "><button  class="btn btn-small btn-account">edit profile</button></a>
                         <a href="{{path('moraspirit_profile_picture')}} "><button  class="btn btn-small btn-account">change profile picture</button></a>
                        
                         
                    </div>
                {% endif %}
                {% if user.accesslevel == 'Head'  %}   
             <h2 align="center">Pillar Head</h2><br>
             {% elseif user.accesslevel == 'Admin' %}  
             <h2 align="center">CXO</h2><br><br>
                    {% endif %}
             
             {% if user.accesslevel != 'Head' and user.accesslevel != 'Admin' %}   
             <br><br>
             {% endif %}
                <table>
                    
                    
                    <tr>
                        
                        <td width="40%">
                            
                    <p align="right">
                        <strong>Full Name</strong>: <br>
                         <strong>Gender</strong>: <br>
                          <strong>Batch</strong>: <br>
                           <strong>Department</strong>: <br>
                           <strong>NIC</strong>: <br>
                           
                           <br>
                           <strong>Address</strong>:<br>
                           <strong>City</strong>:<br>
                           <strong>Country</strong>:<br>
                           <strong>Email</strong>:<br>
                           <strong>Mobile Number</strong>:<br>
                           <strong>Phone Number</strong>:<br>                          
                           {% if user.accesslevel != 'Admin' %}  
                            <strong>Pillar</strong><br><br>
                            {% endif %}
                            {% if user.accesslevel == 'Admin' %}  
                            <br>
                            {% endif %}
                             {% if user.accesslevel != 'Head' and user.accesslevel != 'Admin' %}    
                            <strong>Rating</strong><br>
                            {% endif %}
                    </p>
                        </td>
                        <td width="1%">
                        </td>
                            <td width="40%">
                                
                    <p align="left">
                        {{user.firstname}} {{user.lastname}}<br>
                       {% if user.gender == 'M' %}
                        Male
                        {% else %}
                        Female
                        {% endif %}
                        <br>
                         {{user.batch}}<br>
                         {{user.department}}<br>
                         {{user.nic}}<br>
                        <br>
                    
                          {{user.address}}<br>
                          {{user.city}} <br>
                          {{user.country}} <br>
                           {{user.email}} <br>
                          {{user.mobilenumber}} <br>
                          {% if user.phonenumber == null %}
                        null
                        {% else %}
                        {{user.phonenumber}}
                        {% endif %}<br>     
                           
                           {% if user.accesslevel != 'Admin' %}  
                        <span class="label label-inverse">{{user.pillar}}</span> <br><br>  
                             {% endif %}
                         
                          {% if user.accesslevel == 'Admin' %}  
                            <br>
                            {% endif %}
                             {% if user.accesslevel != 'Head' and user.accesslevel != 'Admin' %}   
                          <span class="label label-important">{{rating}}</span><br>
                           {% endif %}
                         </p>
                        </td>
                         <td width="3%">
                        </td>
                        
                       
                </tr>
                </table>
                
              
                
            </div>
        </div>
    </div>
                                               
    {% if user.accesslevel != 'Head' and user.accesslevel != 'Admin' %}       
                           
                            
                            <div class="row-fluid">
                            <div class="box span12">                                
       
					<div class="box-header well" data-original-title>
						<h2><i class="icon-list"></i> Skills </h2>
						
					</div>
					<div class="box-content">
  
            <div id="content" class="span12">
          
                {% for skill in user.skills %}
                {{skill}}
                <br>
               {% endfor %}
                <br><br>
            </div>
                                        
                                        </div>
                            </div></div>
        <div class="row-fluid">
              <div class="box span12">                                
       
					<div class="box-header well" data-original-title>
						<h2><i class="icon-list"></i> Projects </h2>
						
					</div>
					<div class="box-content">
  
            <div id="content" class="span12">
             
                 <table class="table table-striped table-bordered bootstrap-datatable datatable">

                    <thead>
                        <tr>
                            <th width="15%">Project</th>
                            <th width="30%">Objectives</th>
                            <th width="40%">Description</th>
                            <th width="15%">Expected End Date</th> 

                        </tr>
                    </thead>   

                    <tbody>
							   {% for project in projects %}
                        <tr>
                            <td>
                                <a href="{{path('moraspirit_project_details',{'projectID':project.id})}}" >{{project.name}} </a>
                            </td>
                            <td class="center">
                                {{project.objectives}}
                            </td>
                            <td class="center"> 
                                {{project.description}}
                            </td>
                            
                            <td class="center"> 
                                {{project.due}}
                            </td>
                                                                 
                        </tr>

                        {% endfor %}
                    </tbody>
                </table>  
            </div></div></div></div>
        <div class="row-fluid">
          <div class="box span12">                                
       
					<div class="box-header well" data-original-title>
						<h2><i class="icon-list"></i> Ongoing Tasks </h2>
						
					</div>
					<div class="box-content">
  
            <div id="content" class="span12">
                
                  <table class="table table-striped table-bordered bootstrap-datatable datatable">

                    <thead>
                        <tr>
                            <th width="15%">Task</th>
                            <th width="10%">Due Date</th>
                            <th width="60%">Details</th>
                            <th width="15%">Type</th> 

                        </tr>
                    </thead>   

                    <tbody>
							   {% for task in tasks %}
                                                           {% if task.completed == 0 %}
                        <tr>
                            <td>
                                <a href="{{path('moraspirit_task_details',{'taskID':task.id})}}" >{{task.name}} </a>
                            </td>
                            <td class="center">
                                {{task.duetimestamp}}
                            </td>
                            <td class="center"> 
                                {{task.description}}
                            </td>
                            <td class="center"> 
                                {% if task.type == 1 %}
                                <span class="label label-info">Normal</span>   
                                {% elseif task.type == 2 %}
                                <span class="label label-warning">Important</span>  
                                {% elseif task.type == 3 %}
                                <span class="label label-inverse">Can Wait</span>  
                                {% elseif task.type == 4 %}
                                <span class="label label-important">Urgent</span>  
                                {% endif %}

                            </td>                                       
                        </tr>
                            {% endif %}
                        {% endfor %}
                    </tbody>
                </table>          
            </div></div></div></div>
        <div class="row-fluid">
          <div class="box span12">                                
       
					<div class="box-header well" data-original-title>
						<h2><i class="icon-list"></i> Completed Tasks </h2>
						
					</div>
					<div class="box-content">
  
            <div id="content" class="span12">
               
                  <table class="table table-striped table-bordered bootstrap-datatable datatable">

                    <thead>
                        <tr>
                            <th width="15%">Task</th>
                            <th width="10%">Due Date</th>
                            <th width="60%">Details</th>
                            <th width="15%">Type</th> 

                        </tr>
                    </thead>   

                    <tbody>
							   {% for task in tasks %}
                                                            {% if task.completed == 1 %}
                        <tr>
                            <td>
                                <a href="{{path('moraspirit_task_details',{'taskID':task.id})}}" >{{task.name}} </a>
                            </td>
                            <td class="center">
                                {{task.duetimestamp}}
                            </td>
                            <td class="center"> 
                                {{task.description}}
                            </td>
                            <td class="center"> 
                                {% if task.type == 1 %}
                                <span class="label label-info">Normal</span>   
                                {% elseif task.type == 2 %}
                                <span class="label label-warning">Important</span>  
                                {% elseif task.type == 3 %}
                                <span class="label label-inverse">Can Wait</span>  
                                {% elseif task.type == 4 %}
                                <span class="label label-important">Urgent</span>  
                                {% endif %}

                            </td>                                       
                        </tr>
                            {% endif %}
                        {% endfor %}
                    </tbody>
                </table>          
                
            </div>
        </div>
    </div>
    </div></div>
  
		<div class="row-fluid">
<div class="box span12">
					<div class="box-header well" data-original-title>
						<h2><i class="icon-list"></i> Feedbacks </h2>
						
					</div>
					<div class="box-content">
						 <ul class="dashboard-list">
                    {% for feedback in feedbacks %}
                    <li>
                        <a href="{{path('moraspirit_profile',{'userID':feedback[0]})}}">
                              {% if feedback[2] != null %}
                            <img class="dashboard-avatar" alt="Not Found" src="{{feedback[2]}}">  

                        {% else %}
                            <img class="dashboard-avatar" alt="Not Found" src="/web/bundles/User/Photo/default.jpg">  

                        {% endif%}   
                        <strong>{{feedback[1]}}</strong>
                        </a>
                        <br>
                        {{feedback[3]}}<br>
                        <br>
                    </li>
                    {% endfor %}
                    
                    
                </ul>

					</div>
				</div><!--/span-->
                                
                </div>
                        
                           {% endif %}
</div>



{% endblock %}