{%  extends "::base.html.twig" %}


{% block content %}
<div id="content" class="span10">

    {% if app.user.roles[0] == 'ORGANIZATION' %}
    <div class="row-fluid">
        <div class="pull-right">
            <a href="{{path('ridwan_project_new')}}"><button class="btn btn-round btn-success"><i class="icon-plus"></i> New Project </button></a>
           
        </div>
    </div><br>
                {% endif %}

    <div class="row-fluid">

        <div class="box span12">

            <div class="box-header well" data-original-title>

                <h2><i class="icon-edit"></i> Ongoing Projects</h2>
                <div class="box-icon">

                    <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>

                </div>
            </div>
            <div class="box-content">
                <br>

                <table class="table table-striped table-bordered bootstrap-datatable datatable">

                    <thead>
                        <tr>
                            <th width="15%">Project</th>
                            <th width="30%">Objectives</th>
                            <th width="40%">Description</th>
                            <th width="15%">Expected End Date</th> 

                        </tr>
                    </thead>   

                    <tbody>
							   {% for project in IProjects %}
                        <tr>
                            <td>
                                <a href="{{path('ridwan_project_details',{'projectID':project.id})}}" >{{project.name}} </a>
                            </td>
                            <td class="center">
                                {{project.cause}}
                            </td>
                            <td class="center"> 
                                {{project.description}}
                            </td>
                            
                            <td class="center"> 
                                {{project.proposedenddate}}
                            </td>
                                                                 
                        </tr>

                        {% endfor %}
                    </tbody>
                </table>            
            </div>

        </div>

        <div class="row-fluid">
            <div class="box span12">
                <div class="box-header well" data-original-title>
                    <h2><i class="icon-edit"></i> Completed Projects</h2>
                    <div class="box-icon">

                        <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>

                    </div>
                </div>
                <div class="box-content">
                    <br>

                    <table class="table table-striped table-bordered bootstrap-datatable datatable">

                        <thead>
                            <tr>
                             <th width="15%">Project</th>
                            <th width="30%">Objectives</th>
                            <th width="40%">Description</th>
                            <th width="15%">Expected End Date</th> 

                            </tr>
                        </thead>   

                        <tbody>
							   {% for project in Projects %}
                           <tr>
                            <td>
                                <a href="{{path('moraspirit_project_details',{'projectID':project.id})}}" >{{project.name}} </a>
                            </td>
                            <td class="center">
                                {{project.objectives}}
                            </td>
                            <td class="center"> 
                                {{project.description}}
                            </td>
                            
                            <td class="center"> 
                                {{project.end|date('Y-m-d')}}
                            </td>
                                                                 
                        </tr>

                        {% endfor %}
                        </tbody>
                    </table>            
                </div>

            </div>


        </div>
    </div>
        
{% endblock %}
